{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-app",
      "type": "shell",
      "command": "npm run build",
      "group": "build"
    },
    {
      "label": "build-skip-sitemap",
      "type": "shell",
      "command": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"$env:SITEMAP_SKIP='1'; npm run build\"",
      "group": "build"
    },
    {
      "label": "dev-server",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "group": "build"
    },
    {
      "label": "test",
      "type": "shell",
      "command": "npm test",
      "group": "test"
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "npm run lint"
    }
  ]
}